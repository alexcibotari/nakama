{
    "compilerOptions": {
        "rootDir": "./src/main/typescript",
        "outDir": "./src/main/resources/public/app/",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "src/main/webapp/libs"
    ]
}
